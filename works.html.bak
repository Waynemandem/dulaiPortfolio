                id="workImageModalImg"
                src="" 
                alt="Expanded work image"
                class="work-image-modal-img">
            
            <!-- Close button in top-right corner -->
            <button 
                id="workImageModalClose"
                class="work-image-modal-close"
                aria-label="Close image"
                title="Close (Esc)">
                <!-- SVG close icon -->
