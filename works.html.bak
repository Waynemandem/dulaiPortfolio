    <script>
     // Get DOM elements
        const themeToggle = document.getElementById('themeToggle');
        const body = document.body;

        // Initialize theme on page load
        const initializeTheme = () => {
            // Check for saved theme preference or default to dark
            const savedTheme = localStorage.getItem('theme') || 'dark';
            
            if (savedTheme === 'light') {
                body.classList.add('light-theme');
                themeToggle.classList.add('active');
                themeToggle.setAttribute('aria-pressed', 'true');
            } else {
                // Ensure dark mode is set
                body.classList.remove('light-theme');
                themeToggle.classList.remove('active');
                themeToggle.setAttribute('aria-pressed', 'false');
            }
        };

        // Toggle theme on button click
        themeToggle.addEventListener('click', toggleTheme);

        // Allow toggle via keyboard (Enter or Space)
        themeToggle.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                toggleTheme();
            }
        });

        function toggleTheme() {
            // Toggle light-theme class on body
            body.classList.toggle('light-theme');
            themeToggle.classList.toggle('active');

            // Determine current theme
            const isLightTheme = body.classList.contains('light-theme');

            // Update aria-pressed for accessibility
            themeToggle.setAttribute('aria-pressed', isLightTheme.toString());

            // Save preference to localStorage
            const theme = isLightTheme ? 'light' : 'dark';
            localStorage.setItem('theme', theme);

            // Optional: Log for debugging
            console.log(`Theme switched to: ${theme}`);
        }

        // Initialize theme when DOM is ready
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initializeTheme);
        } else {
            initializeTheme();
        }

        /* ===================================
           Work Section Image Lightbox
           Event delegation-based lightbox for .work section images only
           ==================================== */

        // Get work image modal DOM elements
        const workImageModal = document.getElementById('workImageModal');
        const workImageModalImg = document.getElementById('workImageModalImg');
        const workImageModalClose = document.getElementById('workImageModalClose');
        const workImageModalBackdrop = document.querySelector('.work-image-modal-backdrop');
        const workSection = document.querySelector('.work');

        // Store reference to the image that opened the modal (for focus restoration)
        let workImageOrigin = null;

        /**
         * Open work image modal with specified image
         * @param {HTMLImageElement} imgElement - The image element to display
         */
        function openWorkImageModal(imgElement) {
            // Set modal image source and alt text
            workImageModalImg.src = imgElement.src;
            workImageModalImg.alt = imgElement.alt || 'Expanded work image';

            // Store reference to opened image for focus restoration
            workImageOrigin = imgElement;

            // Show modal with animation
            workImageModal.classList.add('active');
            workImageModal.setAttribute('aria-hidden', 'false');

            // Prevent body scroll when modal is open
            document.body.style.overflow = 'hidden';

            // Focus close button for keyboard navigation
            workImageModalClose.focus();

            // Log for analytics
            console.log('Work image expanded to fullscreen');
        }

        /**
         * Close work image modal
         * Restores focus to the image that opened the modal
         */
        function closeWorkImageModal() {
            workImageModal.classList.remove('active');
            workImageModal.setAttribute('aria-hidden', 'true');

            // Restore body scroll
            document.body.style.overflow = '';

            // Return focus to the image that opened the modal
            if (workImageOrigin) {
                workImageOrigin.focus();
                workImageOrigin = null;
            }

            // Log for analytics
            console.log('Work image modal closed');
        }

        /**
         * Event delegation: Handle clicks on images within .work section
         * Only targets images directly inside .work, not nested in other modals
         */
        if (workSection) {
            workSection.addEventListener('click', function(e) {
                // Check if clicked element is an image
                const clickedElement = e.target;
                if (clickedElement.tagName === 'IMG' && clickedElement.parentElement?.classList.contains('video-card')) {
                    // Make sure the image is not inside a .video-overlay
                    if (!clickedElement.closest('.video-overlay')) {
                        e.stopPropagation();
                        openWorkImageModal(clickedElement);
                    }
                }
            });
        }

        /**
         * Close button click handler
         */
        if (workImageModalClose) {
            workImageModalClose.addEventListener('click', closeWorkImageModal);
        }

        /**
         * Backdrop click handler
         * Closes modal when clicking outside the image
         */
        if (workImageModalBackdrop) {
            workImageModalBackdrop.addEventListener('click', closeWorkImageModal);
        }

        /**
         * Keyboard accessibility: Escape key closes modal
         * Standard UX pattern for dismissible modals
         */
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && workImageModal && workImageModal.classList.contains('active')) {
                closeWorkImageModal();
            }
        });

        /**
         * Handle clicks on the expanded image
         * Prevent closing when clicking directly on the image
         */
        if (workImageModalImg) {
            workImageModalImg.addEventListener('click', function(e) {
                e.stopPropagation();
                // Prevents backdrop click handler from firing
            });
        }

        /**
         * Trap focus within modal when open
         * Keeps keyboard navigation within modal for accessibility
         */
        if (workImageModal) {
            workImageModal.addEventListener('keydown', function(e) {
                if (e.key === 'Tab' && workImageModal.classList.contains('active')) {
                    // Only the close button is interactive in the modal
                    if (document.activeElement === workImageModalClose && e.shiftKey === false) {
                        e.preventDefault();
                        workImageModalClose.focus();
                    }
                }
            });
        }
        </script>

    <!-- Work Section Image Lightbox Modal -->
    <div 
